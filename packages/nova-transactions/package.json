    "framer-motion": "12.x.x",
    "react": ">=19.2.1",
    "react-toastify": ">=11",
    "@tuwaio/pulsar-core": ">=0.3",
    "@tuwaio/nova-core": ">=0.2",
    "@tuwaio/orbit-core": ">=0.2",
    "dayjs": "1.x.x"
  },
  "devDependencies": {
    "@tuwaio/orbit-core": "^0.2.0",
